<!DOCTYPE html>
<html>
  <head>
    <title>Writingtracker</title>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      Signed in as <%= current_user.email %>.<br />
      <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
